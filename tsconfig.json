{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,   
    "rootDir": "src",
    "outDir": "dist",
    "strict": true, 
    "noImplicitAny": true,     
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,    
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
