<option value="{{id}}" id="current{{id}}" selected></option>

<script>
  var id = {{id}},
  option = document.getElementById("current{{id}}");

  {{#each list}}
  if ({{id}} == id) {
    if ("{{label}}" == "") {
      option.innerHTML = "{{name}}";
    }
    else {
      option.innerHTML = "{{label}}";
    }
  }
  {{/each}}
</script>