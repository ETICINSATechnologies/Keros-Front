<div class="card card-info">
	<div class="card-header">
		<h3 class="card-title">Formation</h3>
	</div>
	<div class="card-body">
		<div class="row">
			<div class="col-md-4">
				<div class="form-group">
					<label for="schoolYear">Année Scolaire</label>
					<input
						type="number"
						class="form-control"
						id="schoolYear"
						name="schoolYear"
						min=1
						max=8
						required
						value="{{viewedUser.schoolYear}}"
						{{#unless modify}}disabled{{/unless}}
					>
				</div>
			</div>
			<div class="col-md-8">
				<div class="form-group">
					<label for="departmentId">Département</label>
					<select
						class="form-control"
						id="departmentId"
						name="departmentId"
						{{#unless modify}}disabled{{/unless}}
					>
						{{#each departments}}
							<option
								value="{{id}}"
								{{#if (eq id ../viewedUser.department.id)}}selected{{/if}}
							>{{name}}</option>
						{{/each}}
					</select>
				</div>
      </div>
    </div>
    {{#if (eq entity "consultants")}}
      <div class="form-group">
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            name="isApprentice"
            {{#if viewedUser.isApprentice}}checked{{/if}}
            {{#unless modify}}disabled{{/unless}}
          >
          <label class="form-check-label">
            Formation en apprentissage
          </label>
        </div>
      </div>
      <div class="form-group">
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            name="isGraduate"
            {{#if viewedUser.isGraduate}}checked{{/if}}
            {{#unless modify}}disabled{{/unless}}
          >
          <label class="form-check-label">
            Dîplomé
          </label>
        </div>
      </div>
    {{/if}}
  </div>
</div>
