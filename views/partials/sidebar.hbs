					<a 
						href="/" 
						class="nav-link {{#if (eq route '/')}}active{{/if}}"
					>
						<i class="nav-icon fas fa-tachometer-alt"></i>
						<p>Tableau de Bord</p>
					</a>
				</li>
				<li class="nav-item">
					<a 
            href="/profile/me/view" 
            {{#if (or
              (eq route '/profile/me/view')
              (eq route '/profile/me/modify')
            )}}
              class="nav-link active"
            {{else}}
              class="nav-link"
            {{/if}}
					>
						<i class="nav-icon fas fa-id-card"></i>
						<p>Mon Profil</p>
					</a>
				</li>
