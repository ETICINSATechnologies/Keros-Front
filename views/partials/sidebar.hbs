<aside class="main-sidebar sidebar-dark-olive elevation-4">
	<a href="/" class="brand-link logo-switch">
		<img
			src="/public/images/logo-keros-carre.png" 
			class="brand-image-xl logo-xs h-75"
		>
		<img
			src="/public/images/logo-keros-typo.png"
			class="brand-image-xl logo-xl h-75 mt-1 mx-5"
		>
	</a>
	<div class="sidebar">
