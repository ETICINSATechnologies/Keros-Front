<div id="view-buttons" class="form-buttons pull-right" {{#if (ne action "view")}}style="display: none"{{/if}}>
  {{#if (ne page "profilePage")}}

<body>
<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal" onclick=fct()>Supprimer</button>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"> Attention !</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Etes-vous sûr de vouloir supprimer ce compte?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Non</button>
        <button type="button" class="btn btn-danger" onclick="deleteAccount();">Oui</button>
        <script>
            function deleteAccount(){
                location.href='{{origin}}/delete/{{id}}'
            }
        </script>
      </div>
    </div>
  </div>
</div>
    <button type="button" class="btn btn-primary" onclick="location.href='{{origin}}/update/{{id}}'">Éditer</button>
  {{else}}
    <button type="button" class="btn btn-primary" onclick="location.href='{{origin}}/update'">Éditer</button>
  {{/if}}
</div>
<div id="update-buttons" class="form-buttons pull-right" {{#if (ne action "update")}}style="display: none"{{/if}}>
  {{#if (ne page "profilePage")}}
    <button type="button" class="btn btn-danger" onclick="location.href='{{origin}}/delete/{{id}}'">Supprimer</button>
    {{#if (eq page "memberPage")}}
        <button type="button" class="btn btn-danger" onclick="updateAlumniStatus()">{{#if isAlumni}}Membre{{else}}Ancien{{/if}}</button>
    {{/if}}
  {{/if}}
  <button id="validerbtn" type="submit" class="btn btn-primary">Valider</button>
</div>
<div id="create-buttons" class="form-buttons pull-right" {{#if (ne action "create")}}style="display: none"{{/if}}>
  <button type="submit"  class="btn btn-primary">Valider</button>


  <script>
    function updateAlumniStatus() {
      let isAlumni = document.getElementById("isAlumni").value === 'true';
      document.getElementById("isAlumni").value = !isAlumni;
      document.getElementById("member-update-form").submit();
    }


  function validateFields()
    {let mdpInput = document.getElementById("password").value;
    let mdpInputConfirm =  document.getElementById("password-confirm").value;
    let mdpInputMsg = document.getElementById("password-error-msg");
    if (mdpInput.length < 8)
     {
      document.getElementById("validerbtn").disabled = true;

      mdpInputMsg.innerHTML="Mot de passe inférieur à 8 caractères";
     }
    else if (mdpInput !== mdpInputConfirm)
     {
      document.getElementById("validerbtn").disabled = true;
      mdpInputMsg.innerHTML="Veuillez saisir le même mot de passe ";
     }
    else
     {
      document.getElementById("validerbtn").disabled = false;
      mdpInputMsg.innerHTML="";
     }
  }

  </script>
</div>
