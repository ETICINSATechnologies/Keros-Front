<body class="hold-transition skin-green fixed sidebar-mini">
<div class="wrapper">
  {{> template/header}}
  {{> template/sidebar}}

  <div class="content-wrapper">
    <section class="content-header">
      <h1>
        Tableau de bord
      </h1>
      {{> breadcrumb tab="ACCUEIL" path="Tableau de bord"}}
    </section>
    <section class="content">
      <div class="row row-eq-height">
        <div class="col-md-3 col-sm-6 col-xs-12">
          <div class="info-box">
            <span class="info-box-icon bg-aqua" style="height: fit-content; width: fit-content"><i class="fa fa-files-o fa-3x fa-align-center" style="padding: 10px"></i></span>
            <div class="info-box-content">
              <h4 class="box-title text-center">Etudes en cours</h4>
              <p class="info-box-number text-center" style="font-size: 500%; font-weight: normal">{{studies.content.length}}</p>
            </div>
            <!-- /.info-box-content -->
          </div>
          <!-- /.info-box -->
        </div>
        <!-- /.col -->

        <div class="col-md-4">
          <div class="box box-primary">
            <div class="box-header">
              <h3 class="box-title">Vos études</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body no-padding">
              <table class="table table-bordered">
                {{#each studies.content}}
                {{#if (lt @index 2)}}
                <tr>
                  <td>
                    <div>
                      <a href="/ua/study/{{id}}"><b>{{ifExists name '<i>Aucun</i>'}}</b></a>
                      <p class="text-muted">
                        {{#if (gt description.length 50)}}{{maxLength description 50}}
                        {{else}}{{description}}{{/if}}
                      </p>
                    </div>
                  </td>
                </tr>
                {{/if}}
                {{/each}}
                <tr>
                  <td>
                      <a href="/ua/study/"><p class="text-center" style="font-size: medium">Toutes les études</p></a>
                  </td>
                </tr>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
      </div>
      </div>

    </section>
  </div>

  {{> template/footer}}
</div>
{{> template/scripts}}
</body>
