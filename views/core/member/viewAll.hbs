<body class="hold-transition skin-green fixed sidebar-mini">
<div class="wrapper">
  {{> template/header}}
  {{> template/sidebar}}

  <div class="content-wrapper">
    <section class="content-header">
      <h1>
        Voir les membres
      </h1>
      {{> breadcrumb tab="SG" path="Membres,Voir les membres"}}
    </section>
    <section class="content">
      <div class="row">
        <div class="col-md-3">
          <a href="/core/member/create" style="color: white;">
            <button type="button" class="btn btn-block btn-success btn-lg box">Nouveau membre</button>
          </a>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Les membres</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
              <div class="dataTables_wrapper form-inline dt-bootstrap">
                {{> template/itemPerPage meta=members.meta}}
                <table class="table table-bordered dataTable">
                  <tbody>
                  <tr>
                    <th>Nom d'utilisateur <a href="#" id="username"
                                             class="fa fa-unsorted fa-pull-right select_filter"></a></th>
                    <th>Nom<a href="#" id="name" class="fa fa-unsorted fa-pull-right select_filter"></a></th>
                    <th>Pr√©nom<a href="#" id="firstname" class="fa fa-unsorted fa-pull-right select_filter"></a></th>
                    <th>Id position<a href="#" id="positionId" class="fa fa-unsorted fa-pull-right select_filter"></a>
                    </th>
                    <th>Email<a href="#" id="email" class="fa fa-unsorted fa-pull-right select_filter"></a></th>
                    <th>Voir</th>
                    <th>Modifier</th>
                  </tr>
                  {{#each members.content}}
                    <tr>
                      <td>{{username}}</td>
                      <td>{{lastName}}</td>
                      <td>{{firstName}}</td>
                      <td>{{positionId}}</td>
                      <td>{{email}}</td>
                      <td><a href="/core/member/{{id}}" class="fa fa-hand-pointer-o"></a></td>
                      <td><a href="/core/member/update/{{id}}">Modifier</a></td>
                    </tr>
                  {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
            <div class="box-footer">
              {{> template/pagination meta=members.meta}}
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  {{> template/footer}}
</div>
{{> template/scripts}}
</body>
