<body class="hold-transition skin-green fixed sidebar-mini">
<div class="wrapper">
  {{> template/header}}
  {{> template/sidebar}}

  <div class="content-wrapper">
    <section class="content-header">
      <h1>
        Voir les sociétés
      </h1>
      {{> breadcrumb tab="UA" action="all" pathall="Sociétés,Voir les sociétés"}}
    </section>
    <section class="content">
      <div class="row">
        <div class="col-md-12">
          <div class="box box-primary">
            <!-- /.box-header -->
            <div class="box-body">
              <div class="dataTables_wrapper form-inline dt-bootstrap">
                {{> template/itemPerPage meta=firms.meta}}
                <table class="table table-bordered dataTable">
                  <tbody>
                  <tr>
                    <th>Nom<a href="#" id="name" class="fa fa-unsorted fa-pull-right select_filter"></a></th>
                    <th>Siret<a href="#" id="siret" class="fa fa-unsorted fa-pull-right select_filter"></a></th>
                    <th>Ville<a href="#" class="fa fa-unsorted fa-pull-right select_filter"></a>
                    </th>
                    <th>Type<a href="#" id="typeId" class="fa fa-unsorted fa-pull-right select_filter"></a></th>
                    <th>Voir</th>
                    <th>Modifier</th>
                  </tr>
                  {{#each firms.content}}
                    <tr>
                      <td>{{name}}</td>
                      <td>{{{ifExists siret '<i>Aucun</i>'}}}</td>
                      <td>{{address.city}}</td>
                      <td>{{type.label}}</td>
                      <td><a href="/ua/firm/{{id}}" class="fa fa-eye fa-2x"></a></td>
                      <td><a href="/ua/firm/update/{{id}}" class="fa fa-edit fa-2x"></a></td>
                    </tr>
                  {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
            <div class="box-footer">
              {{> template/pagination meta=firms.meta}}
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-3">
          <a href="/ua/firm/create" style="color: white;">
            <button type="button" class="btn btn-block btn-success btn-lg box">Nouvelle société</button>
          </a>
        </div>
      </div>
    </section>
  </div>

  {{> template/footer}}
</div>
{{> template/scripts}}
</body>
